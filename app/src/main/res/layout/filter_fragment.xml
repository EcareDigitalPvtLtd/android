<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:id="@+id/rangeSeekbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_color="#e1e0e0"
            app:bar_highlight_color="@color/light_blue"
            app:left_thumb_color="@color/light_blue"
            app:left_thumb_color_pressed="#b2b3bc"
            app:max_value="70000"
            app:min_value="5000"
            app:right_thumb_color="@color/light_blue"
            app:right_thumb_color_pressed="#b2b3bc" />

        <TextView
            android:id="@+id/min_value"
            android:layout_below="@+id/rangeSeekbar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000"/>

        <TextView
            android:id="@+id/max_value"
            android:layout_below="@+id/rangeSeekbar1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75000"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="5dp"
        android:text="OK"/>

</LinearLayout>